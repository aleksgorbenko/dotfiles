#!/usr/bin/env bash

./macos.sh
./brew.sh
./fonts.sh

# link vscode settings
${ZSH}/bin/link-file "${HOME}/.vscode.conf" "${HOME}/Library/Application Support/Code/User"

# link ssh
mkdir -p "${HOME}/.ssh"
ln -s "${$ZSH}/ssh/me" "${HOME}/.ssh/me"
ln -s "${ZSH}/karabiner/karabiner.edn" "${HOME}/.config/karabiner.edn"

# set git hooks
git config core.hooksPath git/hooks/
